{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist",
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"],
      "@database/*": ["src/database/*"]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*.spec.ts"]
}
